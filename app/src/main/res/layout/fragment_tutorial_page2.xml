<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:text="Capture the Details"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Photography is key! Take clear and vibrant photos of your Lego projects. Highlight the intricate details and unique features that make your creation stand out."
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"/>


        <ImageView
            android:id="@+id/tutorialPage1HttpIcon"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/tutorial2"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

                <TextView
                    android:id="@+id/skipButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="42dp"
                    android:text="Skip"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:textSize="18sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="20dp">

                        <ProgressBar
                            android:id="@+id/progressButton"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="25"
                            android:progressDrawable="@drawable/progress_button_background" />

                        <ImageButton
                            android:id="@+id/buttonNext"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:background="@drawable/round_border_for_tutorial"
                            android:src="@drawable/arrow_forward_24" />

                </FrameLayout>

        </RelativeLayout>




</LinearLayout>